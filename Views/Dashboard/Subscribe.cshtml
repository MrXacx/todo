@model BoardModel
@{
    ViewBag.Title = "Adicionar Leitor";
}

<nav class="nav mb-3">
    <span class="nav-link disabled" aria-disabled="true">Ol√°, @ViewBag.User.Name!</span>
    <a class="nav-link active" href="/Dashboard/@ViewBag.User.Id">Seus
        Quadros</a>
    <a class="nav-link active" asp-controller="Dashboard" asp-action="Create" asp-route-owner="@ViewBag.User.Id">Novo
        Quadro</a>
</nav>

<div class="modal-dialog">
    <form class="task-form modal-content" action="/Board/Subscribe" method="post">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger d-flex justify-content-between align-items-center" role="alert">
                <span>@ViewBag.Error</span>
                <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <input type="hidden" name="board" value="@Model.Id" />
        <div class="form-floating">
            <input id="emailInput" class="form-control" name="user" type="email" placeholder="Email do Leitor" />
            <label for="emailInput">Email do Leitor</label>
        </div>

        <button type="submit" class="btn btn-primary btn-lg">Criar</button>
    </form>
</div>