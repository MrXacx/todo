@{
	ViewData["Title"] = "Cadastro";

	var InvalidNameMessage = "";
	var InvalidEmailMessage = "";
	var InvalidPasswordMessage = "";
}
<form class="container container-sm text-center" asp-controller="SignUp" asp-action="Index" method="POST">
	<div class="form-floating mb-3">
		<input type="text" class="form-control @(InvalidNameMessage.Length > 0 ? "is-invalid" : "")" id="nameInput">
		<label for="nameInput">@(InvalidNameMessage.Length > 0 ? InvalidNameMessage : "Nome")</label>
	</div>
	<div class="form-floating mb-3">
		<input type="email" class="form-control @(InvalidEmailMessage.Length > 0 ? "is-invalid" : "")" id="emailInput">
		<label for="emailInput">@(InvalidEmailMessage.Length > 0 ? InvalidEmailMessage : "Email")</label>
	</div>
	<div class="form-floating mb-3">
		<input type="password" class="form-control @(InvalidPasswordMessage.Length > 0 ? "is-invalid" : "")"
			id="passwordInput">
		<label for="passwordInput">@(InvalidPasswordMessage.Length > 0 ? InvalidPasswordMessage : "Senha")</label>
	</div>

	<button type="button" class="btn btn-primary btn-lg">Cadastrar</button>
</form>