@model TaskModel
@{
    ViewBag.Title = "Nova Tarefa";
}

<nav class="nav mb-3">
    <span class="nav-link disabled" aria-disabled="true">Olá, @ViewBag.UserName!</span>
    <a class="nav-link active" asp-controller="Task" asp-action="Create">Nova Tarefa</a>
    <a class="nav-link active" href="/h/@ViewBag.UserId">Suas Tarefas</a>
</nav>

<div class="modal-dialog">
    <form class="task-form modal-content" asp-controller="Task" asp-action="Create" method="post">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger d-flex justify-content-between align-items-center" role="alert">
                <span>@ViewBag.Error</span>
                <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <input type="hidden" asp-for="BoardId" value="@ViewBag.BoardId" />
        <div class="form-floating">
            <textarea class="modal-body form-control" asp-for="Content"
                placeholder="Descreva sua tarefa aqui."></textarea>
            <label for="passwordInput">Descrição da Tarefa</label>
        </div>

        <button type="submit" class="btn btn-primary btn-lg">Criar</button>
    </form>
</div>